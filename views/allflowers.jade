html
  head
    title Flowers
  body
    h1 #{color} Flowers

    
    form(action="showColors", method="get")
      select(name='flowerColor')
        each col in flowerColors
          option(value='#{col}') #{col}
      input(type="submit" name="colorButton" value="Choose color")


    ul
      each flower in flowers
        li #{flower.name} is #{flower.color}
